.content
  .user-header
    = link_to (image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?570108281"), "https://www.mercari.com/jp/"
  .user-content
    %section.user-content__container
      %h2.user-content__container__head 新規会員登録
      .user-content__container__inner
        .user-content__container__inner__content
          %a.btn-default.btn-mail{href: "https://www.mercari.com/jp/signup/registration/"}
            =fa_icon 'envelope'
            メールアドレスで登録
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            =fa_icon 'facebook-square'
            Facebookで登録
          %button#google-login.btn-default.btn-sns.btn-sns-google
            = image_tag "https://img.icons8.com/color/48/000000/google-logo.png"
            Googleで登録

  %footer.user-footer
    %nav
      %ul.clearfix
        %li
          = link_to 'プライバシーポリシー', 'https://www.mercari.com/jp/privacy/'
        %li
          = link_to 'メルカリ利用規約', 'https://www.mercari.com/jp/tos/'
        %li
          = link_to '特定商取引に関する表記', 'https://www.mercari.com/jp/tokutei/'
    = link_to (image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?570108281" ,width: "80"),"https://www.mercari.com/jp/"
    %p
      %small © 2019 Mercari

