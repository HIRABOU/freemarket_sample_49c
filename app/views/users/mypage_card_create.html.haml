.mypage-card-create-container
  .card-create-header
    = render 'shared/header' 
    %nav.header-card
      %ul
        %li
          =link_to "メルカリ", "#"
          =fa_icon("angle-right")
        %li
          =link_to "マイページ", "#"
          =fa_icon("angle-right")
        %li
          =link_to "支払い方法", "#"
          =fa_icon("angle-right")
        %li
          %span クレジットカード情報入力
  .card-create-main.center
    .content-box
      = render 'shared/sidebar'
      .card-registration
        %h2.card-registration__title クレジットカード情報入力
        %form.card-registration__form
          .content__box
            .content__box__group
              %label カード番号
              %span.content__box__group__form__require 必須
              %br
              %input.content__box__group__input{"data-input-type" => "card", maxlength: "19", placeholder: "半角数字のみ", type: "text", value:  ""}/
              %ul.content__box__group__card__list
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?4194600336", height:"20", width: "49")
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?4194600336", height:"20", width: "34")
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?4194600336", height:"20", width: "30")  
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?4194600336", height: "20", width: "32") 
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?4194600336", height: "20", width: "21")  
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?4194600336", height: "20", width: "32")
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?4194600336", height: "20", width: "32") 
            .content__box__expire
              %label{for: "payment_card_expire"} 有効期限
              %span.content__box__expire__require 必須
              %br/
              .content__box__expire__box
                .content__box__expire__box__month
                  %select
                    %option{value:  "01"} 01
                    %option{value:  "02"} 02
                    %option{value:  "03"} 03
                    %option{value:  "04"} 04
                    %option{value:  "05"} 05
                    %option{value:  "06"} 06
                    %option{value:  "07"} 07
                    %option{value:  "08"} 08
                    %option{value:  "09"} 09
                    %option{value:  "10"} 10
                    %option{value:  "11"} 11
                    %option{value:  "12"} 12
                %p 月
              .content__box__expire__box
                .content__box__expire__box__year
                  %select
                    %option{value:  "19"} 19
                    %option{value:  "20"} 20
                    %option{value:  "21"} 21
                    %option{value:  "22"} 22
                    %option{value:  "23"} 23
                    %option{value:  "24"} 24
                    %option{value:  "25"} 25
                    %option{value:  "26"} 26
                    %option{value:  "27"} 27
                    %option{value:  "28"} 28
                    %option{value:  "29"} 29
                %p 年
            .content__box__secure
              %label{for:  "payment_card_security_code"} セキュリティコード
              %span.content__box__secure__require 必須
              %input.content__box__secure__default{placeholder: "カード背面4桁もしくは3桁の番号", type:  "number", value:  ""}/
              .content__box__secure__box
                .content__box__secure__box__text{"data-js" => "show-tips-toggle"}
                  %span
                    =fa_icon("question-circle")
                  カード裏面の番号とは？
  
                .content__box__secure__box__hidden{"data-js" => "show-tips-content"}
                  カードの裏面をご参照ください。
                  %br/
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/signup/seq-card.png?4194600336", :width => "240"
            %button#submit-button.btn-default.btn-red{type:  "button"} 追加する
          %script{async:   "", src:  "https://www.google-analytics.com/plugins/ua/ec.js", type:  "text/javascript"}
          %script{async:   "", src:  "https://www.google-analytics.com/analytics.js", type:  "text/javascript"}
          %script{async:   "", src:  "//www.googleadservices.com/pagead/conversion_async.js", type:  "text/javascript"}
          %script{async:   "", src:  "https://www.googletagmanager.com/gtm.js?id=GTM-KLPT5L5"}
          %script{async:   "", src:  "https://p01.mul-pay.jp/ext/js/token.js"}
          %script{async:   "", src:  "//www-mercari-jp.akamaized.net/assets/js/get_gmopg_card_token.js?3335479155"}
          %script{src:  "https://googleads.g.doubleclick.net/pagead/viewthroughconversion/880621981/?random=1556522409982&cv=9&fst=1556522409982&num=1&guid=ON&resp=GooglemKTybQhCsO&u_h=900&u_w=1440&u_ah=806&u_aw=1440&u_cd=24&u_his=3&u_tz=540&u_java=false&u_nplug=3&u_nmime=4&gtm=2wg430&sendb=1&frm=0&url=https%3A%2F%2Fwww.mercari.com%2Fjp%2Fmypage%2Fcard%2Fcreate%2F&ref=https%3A%2F%2Fwww.mercari.com%2Fjp%2Fmypage%2Fcard%2F&tiba=%E3%82%AF%E3%83%AC%E3%82%B8%E3%83%83%E3%83%88%E3%82%AB%E3%83%BC%E3%83%89%E6%83%85%E5%A0%B1%E5%85%A5%E5%8A%9B%20-%20%E3%83%A1%E3%83%AB%E3%82%AB%E3%83%AA%20%E3%82%B9%E3%83%9E%E3%83%9B%E3%81%A7%E3%81%8B%E3%82%93%E3%81%9F%E3%82%93%20%E3%83%95%E3%83%AA%E3%83%9E&async=1&rfmt=3&fmt=4"}
  .toppage-aside
    = render 'shared/aside'
  .toppage-footer
    = render 'shared/footer'
  .footer-sell-btn
    = link_to "#" do
      .sell-text 出品
      .fa.fa-camera

        
