          %textarea{id:"comment-textarea"}
        .detail-comment__btn
          %input{type:"submit", value:"コメントする", id:"comment-btn"}

  .toppage-aside
    = render 'shared/aside'

  .toppage-footer
    = render 'shared/footer'
