.toppage-header
  = render 'shared/header'
.main-content
  = render 'shared/sidebar'

  -#右側のコンテンツ
  .main-content_right
    %section.main-content_right-contents

      -#右側コンテンツヘッダー部分
      .main-content_right-contents_header
        %a.main-content_right-contents_header-link{:href => "https://www.mercari.com/jp/u/379323571/"}
          %figure
            %img{:alt => "", :height => "60", :src => "//static.mercdn.net/images/member_photo_noimage_thumb.png", :width => "60"}/
          %h3.bold  湯豆腐
