.search-container

  .search-header
    = render 'shared/header'

  .search-head-category
    .fixed-word メルカリ
    -if(@items.present?)
      .right-mark >
      .search-word 
        = @word


  .search-main
    -# こちらの search-main__side は仮置きです(検索Lv2)
    .search-main__side
      %select.search-main__side__select{:name => "sort_order"}
        %option{:value => ""} 並び替え
        %option{:value => "price_asc"}
          価格の安い順
        %option{:value => "price_desc"}
          価格の高い順
        %option{:value => "created_asc"}
          出品の古い順
        %option{:value => "created_desc"}
          出品の新しい順
        %option{:value => "like_desc"}
          いいね!の多い順
      
      .search-main__side__extend
        %h3 詳細検索
        .form-group
          %label
            %i.icon-plus
            %span キーワードを追加する
          %input.input-default{:name => "keyword", :placeholder => "例）値下げ", :type => "text", :value => ""}/
        .form-group
          %label
            %i.icon-list
            %span カテゴリーを選択する
          .select-wrap{"data-search" => "parent"}
            %select.select-default{:name => "category_root"}
              %option{:value => ""} すべて
              %option{"data-root-id" => "1", :value => "1"} レディース
              %option{"data-root-id" => "2", :value => "2"} メンズ
              %option{"data-root-id" => "3", :value => "3"} ベビー・キッズ
              %option{"data-root-id" => "4", :value => "4"} インテリア・住まい・小物
              %option{"data-root-id" => "5", :value => "5"} 本・音楽・ゲーム
              %option{"data-root-id" => "1328", :value => "1328"} おもちゃ・ホビー・グッズ
              %option{"data-root-id" => "6", :value => "6"} コスメ・香水・美容
              %option{"data-root-id" => "7", :value => "7"} 家電・スマホ・カメラ
              %option{"data-root-id" => "8", :value => "8"} スポーツ・レジャー
              %option{"data-root-id" => "9", :value => "9"} ハンドメイド
              %option{"data-root-id" => "1027", :value => "1027"} チケット
              %option{"data-root-id" => "1318", :value => "1318"} 自動車・オートバイ
              %option{"data-root-id" => "10", :value => "10"} その他
            %i.icon-arrow-bottom
        .form-group 
          %label
            %i.icon-plus
            %span ブランド名から探す
          %input.input-default{:name => "keyword", :placeholder => "例）シャネル", :type => "text", :value => ""}/
        .form-group
          %label
            %i.icon-list
            %span サイズを指定する（仮）
          .select-wrap{"data-search" => "parent"}
            %select.select-default{:name => "category_root"}
              %option{:value => ""} すべて
              %option{"data-root-id" => "1", :value => "1"} レディース
              %option{"data-root-id" => "2", :value => "2"} メンズ
              %option{"data-root-id" => "3", :value => "3"} ベビー・キッズ
              %option{"data-root-id" => "4", :value => "4"} インテリア・住まい・小物
              %option{"data-root-id" => "5", :value => "5"} 本・音楽・ゲーム
              %option{"data-root-id" => "1328", :value => "1328"} おもちゃ・ホビー・グッズ
              %option{"data-root-id" => "6", :value => "6"} コスメ・香水・美容
              %option{"data-root-id" => "7", :value => "7"} 家電・スマホ・カメラ
              %option{"data-root-id" => "8", :value => "8"} スポーツ・レジャー
              %option{"data-root-id" => "9", :value => "9"} ハンドメイド
              %option{"data-root-id" => "1027", :value => "1027"} チケット
              %option{"data-root-id" => "1318", :value => "1318"} 自動車・オートバイ
              %option{"data-root-id" => "10", :value => "10"} その他
            %i.icon-arrow-bottom
        .form-group.search-price
          %label
            %i.icon-coin
            %span 価格
          .select-wrap
            %select.select-default{"data-search" => "price", :name => ""}
              %option{:value => ""} 選択してください
              %option{:value => "300-1000"}
                300 ~ 1000
              %option{:value => "1000-5000"}
                1000 ~ 5000
              %option{:value => "5000-10000"}
                5000 ~ 10000
              %option{:value => "10000-30000"}
                10000 ~ 30000
              %option{:value => "30000-50000"}
                30000 ~ 50000
              %option{:value => "50000"}
                50000 ~
            %i.icon-arrow-bottom
          %input.input-default{"data-search" => "price-min", :name => "price_min", :placeholder => "¥ Min", :type => "number", :value => ""}/
          %span ~
          %input.input-default{"data-search" => "price-max", :name => "price_max", :placeholder => "¥ Max", :type => "number", :value => ""}/

        .form-group.clearfix
          %label
            %i.icon-star
            %span 商品の状態
          %div
            .checkbox-default
              %input#condition_all{"data-search" => "all", :name => "condition_all", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "condition_all"} すべて
            .checkbox-default
              %input{:id => "item_condition_id[1]", :name => "item_condition_id[1]", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "item_condition_id[1]"} 新品、未使用
            .checkbox-default
              %input{:id => "item_condition_id[2]", :name => "item_condition_id[2]", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "item_condition_id[2]"} 未使用に近い
            .checkbox-default
              %input{:id => "item_condition_id[3]", :name => "item_condition_id[3]", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "item_condition_id[3]"} 目立った傷や汚れなし
            .checkbox-default
              %input{:id => "item_condition_id[4]", :name => "item_condition_id[4]", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "item_condition_id[4]"} やや傷や汚れあり
            .checkbox-default
              %input{:id => "item_condition_id[5]", :name => "item_condition_id[5]", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "item_condition_id[5]"} 傷や汚れあり
            .checkbox-default
              %input{:id => "item_condition_id[6]", :name => "item_condition_id[6]", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "item_condition_id[6]"} 全体的に状態が悪い

        .form-group.clearfix
          %label
            %i.icon-track
            %span 配送料の負担
          %div
            .checkbox-default
              %input#shipping_payer_all{"data-search" => "all", :name => "shipping_payer_all", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "shipping_payer_all"} すべて
            .checkbox-default
              %input{:id => "shipping_payer_id[1]", :name => "shipping_payer_id[1]", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "shipping_payer_id[1]"} 着払い(購入者負担)
            .checkbox-default
              %input{:id => "shipping_payer_id[2]", :name => "shipping_payer_id[2]", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "shipping_payer_id[2]"} 送料込み(出品者負担)

        .form-group.clearfix
          %label
            %i.icon-cart
            %span 販売状況
          %div
            .checkbox-default
              %input#status_all{"data-search" => "all", :name => "status_all", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "status_all"} すべて
            .checkbox-default
              %input#status_on_sale{:name => "status_on_sale", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "status_on_sale"} 販売中
            .checkbox-default
              %input#status_trading_sold_out{:name => "status_trading_sold_out", :type => "checkbox", :value => "1"}/
              %i.icon-check
              %label{:for => "status_trading_sold_out"} 売り切れ



    .search-main__items
      %section.search-main__items__container
        -if(@items.blank? || @items.length == 0)
          %h2.search-result-head
            ="検索結果 0件"
          %p.search-result-description
            該当する商品が見つかりません。商品は毎日増えていますので、これからの出品に期待してください。
          %h3.items-box-head
            新着商品
          .items-box-content.clearfix
            -@new_items.each do |item|
              %section.items-box
                = link_to item_path(item) do
                  %figure.items-box-photo
                    = image_tag item.images.first, class:"items-photo"
                .items-box-body
                  %h3.items-box-name
                    = item.name
                  .items-box-num
                    .items-box-price
                      .yen-mark ¥
                      = item.price
                  %p.item-box-tax (税込)
        -else
          %h2.search-result-head
            ="検索結果 1-#{@items.length}件"
            %h3.items-box-head
            .items-box-content.clearfix
              -@items.each do |item|
                %section.items-box
                  = link_to item_path(item) do
                    %figure.items-box-photo
                      = image_tag item.images.first, class:"items-photo"
                  .items-box-body
                    %h3.items-box-name
                      = item.name
                    .items-box-num
                      .items-box-price
                        .yen-mark ¥
                        = item.price
                    %p.item-box-tax (税込)

  .toppage-aside
    = render 'shared/aside'

  .toppage-footer
    = render 'shared/footer'
  
  

