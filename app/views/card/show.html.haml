.toppage-header
  = render 'shared/header'
.main-content
  = render 'shared/sidebar'
  .main-content_right
    .main-content_right_credit
      .main-content_right_credit__head　支払い方法
      .main-content_right_credit__body
        %label 登録クレジットカード情報
        %figure
          %img{:alt => "visa", :height => "15", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?376951604", :width => "49"}/
        %br
        = "**** **** **** " + @default_card_information.last4
        %br
        - exp_month = @default_card_information.exp_month.to_s
        - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
        = exp_month + " / " + exp_year
        = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
          %input{ type: "hidden", name: "card_id", value: "" }
          %button 削除する