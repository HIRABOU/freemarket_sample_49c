.mypage-card-create-container
  .card-create-header
    = render 'shared/header' 
    %nav.header-card
      %ul
        %li
          =link_to "メルカリ", "#"
          =fa_icon("angle-right")
        %li
          =link_to "マイページ", "#"
          =fa_icon("angle-right")
        %li
          =link_to "支払い方法", "#"
          =fa_icon("angle-right")
        %li
          %span クレジットカード情報入力
  .card-create-main.center
    .content-box
      .card-create-side
        = render 'shared/sidebar'
      .card-registration
        %h2.card-registration__title クレジットカード情報入力
        = form_tag(pay_card_index_path, method: :post, id: 'charge-form', class: 'card-registration__form',  name: "inputForm") do
          .content__box
            .content__box__group
              %label カード番号
              %span.content__box__group__form__require 必須
              %br
              %input.content__box__group__input{"data-input-type" => "card", maxlength: "16", placeholder: "半角数字のみ", type: "text", name: "card_number",id: "payment_card_no"}/
              %ul.content__box__group__card__list
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?4194600336", height:"20", width: "49")
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?4194600336", height:"20", width: "34")
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?4194600336", height:"20", width: "30")  
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?4194600336", height: "20", width: "32") 
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?4194600336", height: "20", width: "21")  
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?4194600336", height: "20", width: "32")
                %li
                  =image_tag("//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?4194600336", height: "20", width: "32") 
              .content__box__expire
                %label{for: "payment_card_expire"} 有効期限
                %span.content__box__expire__require 必須
                %br/
                .content__box__expire__box
                  .content__box__expire__box__month
                    %select{name: "exp_month",id: "payment_card_expire_mm"}
                      %option{value:  "01"} 01
                      %option{value:  "02"} 02
                      %option{value:  "03"} 03
                      %option{value:  "04"} 04
                      %option{value:  "05"} 05
                      %option{value:  "06"} 06
                      %option{value:  "07"} 07
                      %option{value:  "08"} 08
                      %option{value:  "09"} 09
                      %option{value:  "10"} 10
                      %option{value:  "11"} 11
                      %option{value:  "12"} 12
                  %p 月
                .content__box__expire__box
                  .content__box__expire__box__year
                    %select.exp_year{name: "exp_year",id: "payment_card_expire_yy"}
                      %option{value:  "19"} 19
                      %option{value:  "20"} 20
                      %option{value:  "21"} 21
                      %option{value:  "22"} 22
                      %option{value:  "23"} 23
                      %option{value:  "24"} 24
                      %option{value:  "25"} 25
                      %option{value:  "26"} 26
                      %option{value:  "27"} 27
                      %option{value:  "28"} 28
                      %option{value:  "29"} 29
                  %p 年
              .content__box__secure
                %label{for:  "payment_card_security_code"} セキュリティコード
                %span.content__box__secure__require 必須
                %input.content__box__secure__default{placeholder: "カード背面4桁もしくは3桁の番号", type:  "number", value:  "",name: "cvc",id: "payment_card_security_code"}/
                .content__box__secure__box
                  .content__box__secure__box__text{"data-js" => "show-tips-toggle"}
                    %span
                      =fa_icon("question-circle")
                    カード裏面の番号とは？
    
                  .content__box__secure__box__hidden{"data-js" => "show-tips-content"}
                    カードの裏面をご参照ください。
                    %br/
                  = image_tag "//www-mercari-jp.akamaized.net/assets/img/signup/seq-card.png?4194600336", :width => "240"
                  = submit_tag "追加する", id: "token_submit", class: "btn-default btn-red"

  .toppage-aside
    = render 'shared/aside'
  .toppage-footer
    = render 'shared/footer'

  = link_to new_item_path do
    .footer-sell-btn
      .footer-sell-box
        .sell-text 出品
        .fa.fa-camera
